  for(int i = 0; i < N; i++) {
    long long v;
    std::cin >> v;
    a[i] = Am::init(v);
  }
  using Seg = SegmentTree<Am>;
  auto seg = Seg::init(&a);
  while(Q--) {
    int t, a, b;
    std::cin >> t >> a >> b;
    if(t == 0) {
      Seg::update(&seg, a, Am::init(Seg::get(&seg, a)->v + b));
    }
    else {
      std::cout << Seg::sum(&seg, a, b).v << '\n';
    }
  }
}$$

